%h2 Sign in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { label_html: { class: 'sr-only' } }) do |f|
  .form-inputs
    = f.input :email, required: false, autofocus: true, placeholder: 'Email'
    = f.input :password, required: false, placeholder: 'Password'
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Sign in", class: 'btn btn-default'
= render "devise/shared/links"
