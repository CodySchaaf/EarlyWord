%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { label_html: { class: 'sr-only' } }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, required: true, placeholder: 'Name'#, label: false
    = f.input :email, required: true, autofocus: true, placeholder: 'Email'#, label: false
    = simple_fields_for @zip_code, defaults: { label_html: { class: 'sr-only' } } do |fz|
      = fz.input :zip_code, placeholder: 'Zip Code'#, label: false
    = f.input :password, required: true, placeholder: 'Password'#, label: false
    = f.input :password_confirmation, required: true, placeholder: 'Confirm Password'#, label: false
  .form-actions
    = f.button :submit, 'Sign up'
= render 'devise/shared/links'
